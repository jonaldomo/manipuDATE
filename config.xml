<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.github.jonaldomo.manipudate"
        versionCode="10"
        version   = "0.0.1">

    <name>manipuDate</name>

    <description>
        A smart, intuitive application to calculate future dates and countdown to a date in the future. 
    </description>

    <author href="http://memoses.blogspot.com" email="moses.john.r@gmail.com">
        John Moses
    </author>
    
     <preference name="permissions" value="none"/>
    
     <!-- if a single icon is specified then Build will use it for all platforms -->
    <icon src="icons/icon.png" /<name />

	<!-- iOS requires specific dimensions for splash screens; classic iPhone screens, Retina 
      Screens, and iPad screen respectively -->
    <icon src="icons/icon-iphone-57.png" width="57" height="57"/> 
    <icon src="icons/icon-iphone-72.png" width="72" height="72"/> 
    <icon src="icons/icon-iphone-114.png" width="114" height="114"/> 

	<!-- Android requires specific dimensions; ldpi, mdpi, and hdpi respecitvely. --> 
    <icon src="icons/icon-android-36.png" width="36" height="36"/> 
    <icon src="icons/icon-android-48.png" width="48" height="48"/> 
    <icon src="icons/icon-android-72.png" width="72" height="72"/> 

</widget>